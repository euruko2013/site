<footer class="text-center">
  <p class="date" itemprop="dateCreated" content="<%= article_date.strftime('%F') %>"><%= article_date.strftime('%b %e, %Y') %></p>
<ul class="authors unstyled">
  <% authors.each_with_index do |author, i| %>
    <% if i > 0 %>
      <p class="text-separator">&amp;</p>
    <% end %>
    <li class="author">
      <%= image_tag "committee/#{author}.png", alt: author, itemprop: "image" %>
      <p itemscope itemprop="author" itemtype="http://schema.org/Author">
        by <span itemprop="name"><%= author %></span>
      </p>
    </li>
  <% end %>
</ul>
</footer>
