                        <a href="http://www.visitgreece.gr/en/greek_islands/argosaronic_islands" target="_blank" class="thumbnail">
                            <%= image_tag 'guide/hydra_miaoulis.jpg' %>
                            <p class="attribution">Public Domain</p>
