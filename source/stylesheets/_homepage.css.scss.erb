h3 {
  padding: $vr 0;
  font: bold 22px $ubuntu;
  color: #b5b5b5;
  text-align: center;
  text-shadow: 1px 1px 0px white;
}

.section {
  padding: 60px 0;
}

.back_top {
  position: absolute;
  right: 0px;
  width: 140px;
  padding-bottom: $vr;
  border-bottom: 1px solid $dark_grey;
  font: 300 13px $ubuntu;
  font-style: italic;
  color: $lighter_grey;
  text-align: right;
  text-decoration: none;
}

.more {
  display: block;
  margin: $vr auto 0;
  font: 300 15px $ubuntu;
  color: $lighter_grey;
  text-align: center;
}

#introduction {
  position: relative;
  padding-top: 0;
  padding-bottom: 0;
  background: -moz-radial-gradient(center, ellipse cover,  rgba(0,0,0,0) 0%, rgba(0,0,0,0.1) 100%); /* FF3.6+ */
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,0.1))); /* Chrome,Safari4+ */
  background: -webkit-radial-gradient(center, ellipse cover,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-radial-gradient(center, ellipse cover,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.1) 100%); /* Opera 12+ */
  background: -ms-radial-gradient(center, ellipse cover,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.1) 100%); /* IE10+ */
  background: radial-gradient(ellipse at center,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.1) 100%); /* W3C */
  background-repeat: no-repeat;
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00000000', endColorstr='#a6000000',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */

  hgroup {
    overflow: hidden;
    width: 275px;
    height: 94px;
    margin: 250px auto 15px;
    background: transparent image-url("sprite.png") 0px 0px no-repeat;
    text-indent: -9999px;
    position: relative;
    z-index: 9;
  }

  hgroup + p {
    width: 275px;
    height: 67px;
    margin: 0px auto 3*$hr auto;
    text-indent: -9999px;
    position: relative;
    z-index: 8;

    &:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 275px;
      height: 67px;
      background: transparent image-url("sprite.png") 0px -120px no-repeat;
      z-index: 9;
    }
  }

  p + p {
    width: 600px;
    margin: $hr auto;
    font: 300 22px/32px $ubuntu;
  }

  .centered {
    min-height: 600px;
    background-image: image-url("parallax/back.png"),
                      image-url("parallax/middle.png"),
                      image-url("parallax/front_middle.png"),
                      image-url("parallax/front.png");
    background-repeat: no-repeat;
    text-align: center;
  }

  &:after {
    content: "";
    position: absolute;
    bottom: -30px;
    left: 50%;
    display: block;
    width: 24px;
    height: 24px;
    margin-left: -30px;
    padding: 17px;
    border: 1px solid #b2b2b2;
    -webkit-border-radius: 50px;
    border-radius: 50px;
    background: image-url("sprite.png") 17px -358px no-repeat;
  }

  .news {
    position: absolute;
    top: 280px;
    padding: 20px 20px 20px 30px;
    text-align: left;
    right: 0;
    background: rgb(87,87,87);
    background: rgba(0,0,0,.67);

    h3 {
      font-size: 14px;
      color: #fff;
      text-shadow: 0 0 #fff;
      font-weight: 100;
      text-align: left;
      padding: 0 0 $vr/2;
      margin-bottom: $vr/2;
      border-bottom: 1px solid #848484;
    }

    ul {
      font-size: 12px;
      color: #fff;

      li {
        margin-bottom: $vr/4;
      }

      span {
        font-weight: bold;
        margin-right: 10px;
      }

      a {
        color: #fff;
        text-decoration: none;
        max-width: 220px;
        display: inline-block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        vertical-align: top;
        padding-bottom: 3px;

        &:hover,
        &:active {
          padding-bottom: 2px;
          border-bottom: 1px dotted #fff;
        }
      }
    }
  }
}


/* Antikythera Mechanism Animation */

@-moz-keyframes play-core {
   from { -moz-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -moz-transform: rotate(360deg);
          transform: rotate(360deg); }
}

@-webkit-keyframes play-core {
   from { -webkit-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -webkit-transform: rotate(360deg);
          transform: rotate(360deg); }
}

@-o-keyframes play-core {
   from { -o-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -o-transform: rotate(360deg);
          transform: rotate(360deg); }
}

@-ms-keyframes play-core {
   from { -ms-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -ms-transform: rotate(360deg);
          transform: rotate(360deg); }
}

@keyframes play-core {
   from { transform: rotate(0deg); }
     to { transform: rotate(360deg); }
}

@-moz-keyframes play-gears {
   from { -moz-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -moz-transform: rotate(-360deg);
          transform: rotate(-360deg); }
}

@-webkit-keyframes play-gears {
   from { -webkit-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -webkit-transform: rotate(-360deg);
          transform: rotate(-360deg); }
}

@-o-keyframes play-gears {
   from { -o-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -o-transform: rotate(-360deg);
          transform: rotate(-360deg); }
}

@-ms-keyframes play-gears {
   from { -ms-transform: rotate(0deg);
          transform: rotate(0deg); }
     to { -ms-transform: rotate(-360deg);
          transform: rotate(-360deg); }
}

@keyframes play-gears {
   from { transform: rotate(0deg); }
     to { transform: rotate(-360deg); }
}


.antikythera-mechanism {
    width: 217px;
    height: 215px;
    position: absolute;
    top: -160px;
    left: 25px;
    z-index: 8;

  .core {
    position: absolute;
    top: 0;
    left: 0;
    background: transparent image-url("antikythera/sprite.png") 0px 0px no-repeat;
    width: 217px;
    height: 215px;
    animation: play-core 240s steps(600) infinite;
    -moz-animation: play-core 240s steps(600) infinite;
    -webkit-animation: play-core 240s steps(600) infinite;
    -o-animation: play-core 240s steps(600) infinite;
    -ms-animation: play-core 240s steps(600) infinite;
  }

  .gears-1 {
    position: absolute;
    top: 0;
    left: 0;
    width: 217px;
    height: 215px;
    -moz-animation: play-gears 200s steps(120) infinite;
    -webkit-animation: play-gears 200s steps(120) infinite;
    -o-animation: play-gears 200s steps(120) infinite;
    -ms-animation: play-gears 200s steps(120) infinite;
    animation: play-gears 200s steps(120) infinite;

    &:before {
      content: "";
      position: absolute;
      top: -4px;
      left: -19px;
      background: image-url("antikythera/sprite.png") 0px -239px no-repeat;
      width: 91px;
      height: 106px;
    }
  }

  .gears-2 {
    position: absolute;
    top: 0;
    left: 0;
    width: 217px;
    height: 215px;
    -moz-animation: play-gears 400s steps(600) infinite;
    -webkit-animation: play-gears 400s steps(600) infinite;
    -o-animation: play-gears 400s steps(600) infinite;
    -ms-animation: play-gears 400s steps(600) infinite;
    animation: play-gears 400s steps(600) infinite;

    &:before {
      content: "";
      position: absolute;
      bottom: 1px;
      left: 148px;
      background: image-url("antikythera/sprite.png") 0px -361px no-repeat;
      width: 74px;
      height: 76px;
    }
  }
}

