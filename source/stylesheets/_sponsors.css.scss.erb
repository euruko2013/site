#sponsors {
  .section {
    margin: 0 auto;
    max-width: 900px;
  }

  h1 {
    margin-top: 50px;
    font-size: 20px;
    font: 300 32px/42px $ubuntu;
    text-align: right;
  }

  h2 {
    text-align: left;
    padding-bottom: 0px;
  }

  .sponsor {
    img {
      margin-right: 20px;
    }
  }

  li {
    display: inline-block;
    vertical-align: top;
  }

  p {
    text-align: justify;
    margin-top: 10px;
  }

  #gaia {
    img {
      float: left;
    }

    p {
      margin-top: 0;
    }

    height: 400px;

    li {
      vertical-align:top;
    }
  }

  #helios {
    li {
      width: 250px;
      margin-right: 68px;
      &:last-child {
        margin-right: 0;
      }
    }
  }

  #selene {
    li {
      width: 100px;
      margin-right: 54px;
      &:last-child {
        margin-right: 0;
      }
    }
  }

  #aphrodite {
    li {
      width: 80px;
      margin-right: 16.5px;

      &:last-child {
        margin-right: 0;
      }
    }
  }
}
