/* Common elements */
body, 
button, input, select, textarea { 
  font:normal 1em/1.4 $verdana;
  color: $dark_grey;
}

body {
    padding-top: 60px;
}

a {
  border-bottom: 1px dotted;
}

a:hover {
  text-decoration: none;
  border-bottom: 1px solid;
}

strong {
    font-weight: bold;
}

.centered {
  position:relative;
  overflow:hidden;
  max-width:1180px;
  margin:0 auto;
  width: 98%;

}

.external-link {
  display: block;
  margin: 3*$vr auto 0;
  padding: 10px 10px;
  border: 1px solid #cecece;
  background: #d7d7d7;
  font: 300 18px $ubuntu;
  color: $light_grey;
  text-decoration: none;
}

.external-link:hover,
.external-link:active, {
  border: 1px solid #b6b6b6;
  background: #cacaca;
  color: #6d6e71;
}

.external-link.disabled {
  border: 1px solid #dadada;
  background: #e4e4e4;
  color: $lightest_grey;

  &:before {
    opacity: .6;
  }
}
